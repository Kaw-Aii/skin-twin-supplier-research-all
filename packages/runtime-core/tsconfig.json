{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "rootDir": "src",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "paths": {
      "@proj-airi/core": ["../core/src/index.ts"],
      "@proj-airi/core/*": ["../core/src/*"]
    },
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "outDir": "dist",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
